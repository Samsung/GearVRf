{
  "$schema": "http://json-schema.org/schema#",
  "id": "material.json",

  "type": "object",
  "properties": {
    "shader_type": { "type" : "string", "enum": [ "cubemap", "texture" ] },
    "main_texture": { "$ref": "texture.json" },
    "textures": {
      "type": "array",
      "items": { "$ref": "texture.json" }
    },
    "color": { "$ref": "color.json" },
    "ambient_color": { "$ref": "color.json" },
    "diffuse_color": { "$ref": "color.json" },
    "specular_color": { "$ref": "color.json" },
    "specular_exponent": { "type": "number", "minimum": 0, "maximum": 128 },
    "opacity": { "$ref": "scalar.json" }
  }
}