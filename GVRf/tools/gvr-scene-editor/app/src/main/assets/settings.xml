<!--
   ~ This file defines a Laser Cursor. To use a Laser Cursor in the app make sure this file is
   ~ placed in the assets directory and is named "settings.xml".
-->
<settings xmlns="http://www.w3schools.com/3DCursor"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://www.w3schools.com/3DCursor xml/settings_schema.xsd">
    <global onscreen="yes"
            preview="no"
            soundEnabled="yes"/>
    <theme name="Red Dot"
           cursorType="laser"
           description="Defines a red laser dot with animations"
           id="red_dot">
        <asset action="default"
               soundEnabled="no"
               src="cursor_default.png"
               type="2D"
               x="0.1"
               y="0.1"/>
        <asset action="click"
               soundEnabled="yes"
               soundSrc="click_a.mp3"
               src="cursor_action1.png"
               type="2D"
               x="0.1"
               y="0.1"/>
        <asset action="loading"
               animated="yes"
               duration="1.0"
               soundEnabled="no"
               src="cursor_loading.zip"
               type="2D"
               x="0.1"
               y="0.1"/>
        <asset action="hover"
               animated="yes"
               duration="1.0"
               soundEnabled="no"
               src="cursor_hover.zip"
               type="2D"
               x="0.1"
               y="0.1"/>
    </theme>
    <theme name="Crystal Sphere"
           cursorType="object"
           id="crystal_sphere">
        <asset action="default"
               animated="no"
               soundEnabled="no"
               src="poly_sphere_default"
               type="3D"/>
        <asset action="click"
               animated="no"
               soundEnabled="no"
               src="poly_sphere_click"
               type="3D"/>
        <asset action="intersect"
               animated="no"
               soundEnabled="no"
               src="poly_sphere_collision"
               type="3D"/>
    </theme>
    <cursor name="Laser Cursor"
            active="no"
            position="center"
            themeId="red_dot"
            type="laser">
        <io deviceId="mouse"
            priority="1"
            productId="0"
            vendorId="0"/>
        <io deviceId="android_gamepad"
            priority="2"
            productId="1"
            vendorId="1"/>
        <io deviceId="gearvr"
            priority="3"
            productId="42240"
            vendorId="1256"/>
    </cursor>
    <cursor name="Object Cursor"
            active="yes"
            position="center"
            themeId="crystal_sphere"
            type="object">
        <io deviceId="mouse"
            priority="1"
            productId="0"
            vendorId="0"/>
        <io deviceId="android_gamepad"
            priority="2"
            productId="1"
            vendorId="1"/>
        <io deviceId="gearvr"
            priority="3"
            productId="42240"
            vendorId="1256"/>
    </cursor>
</settings>
